# ==================== DATABASE ====================
# PostgreSQL Connection URLs for each service
# LOCAL DEVELOPMENT: Change 'postgres:5432' and credentials as needed
DATABASE_URL=postgresql://postgres:password@localhost:5432/auth
USER_DATABASE_URL=postgresql://postgres:password@localhost:5432/users
LISTING_DATABASE_URL=postgresql://postgres:password@localhost:5432/listings
OFFER_DATABASE_URL=postgresql://postgres:password@localhost:5432/offers
PAYMENT_DATABASE_URL=postgresql://postgres:password@localhost:5432/payments
NOTIFICATION_DATABASE_URL=postgresql://postgres:password@localhost:5432/notifications
CHAT_DATABASE_URL=postgresql://postgres:password@localhost:5432/chat
ADMIN_DATABASE_URL=postgresql://postgres:password@localhost:5432/admin

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379/0

# ==================== KAFKA ====================
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# MinIO
# ==================== JWT & SECURITY ====================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== MINIO (S3-Compatible Storage) ====================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

# ==================== EMAIL (SMTP) ====================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@swap.local

# ==================== DJANGO (Admin Service) ====================
DJANGO_SECRET_KEY=django-insecure-your-secret-key-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,*.local

# ==================== ENVIRONMENT ====================
ENVIRONMENT=development
LOG_LEVEL=DEBUG